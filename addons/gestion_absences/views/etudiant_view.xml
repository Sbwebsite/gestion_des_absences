<odoo>
    <record id="view_etudiant_tree" model="ir.ui.view">
        <field name="name">etudiant.tree</field>
        <field name="model">gestion.etudiant</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="prenom"/>
                <field name="cne"/>
                <field name="filiere"/>
            </tree>
        </field>
    </record>

    <record id="view_etudiant_form" model="ir.ui.view">
        <field name="name">etudiant.form</field>
        <field name="model">gestion.etudiant</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="prenom"/>
                        <field name="cne"/>
                        <field name="filiere"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_etudiant" model="ir.actions.act_window">
        <field name="name">Étudiants</field>
        <field name="res_model">gestion.etudiant</field> <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre premier étudiant !
            </p>
        </field>
    </record>
</odoo>
